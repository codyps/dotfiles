bindsym $mod+r mode "resize"

# Toggle between "dock" and "hide". Use non-existent
# modifier to make "hide" act like "invisible"
bindsym $mod+b bar mode toggle

bar {
        # Using Mod5 here because I don't have one.
        modifier Mod5
        hidden_state hide
        id bar-1
        status_command i3status
}
